<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eaeaea"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.loopj.android.image.RoundImageView
            android:id="@+id/item_head_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/head" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/item_user_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/sex_man" />

            <TextView
                android:id="@+id/item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/item_user_sex"
                android:text="不流泪的鱼"
                android:textColor="#040404"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_user_sex"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:focusable="false"
                android:text="今天中午12:00"
                android:textColor="#6B6A6A"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="4dp"
        android:focusable="false"
        android:textColor="#040404"
        android:textSize="12sp" />

    <GridView
        android:id="@+id/item_gridview"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="66dp"
        android:focusable="false"
        android:horizontalSpacing="8dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:focusable="false" />

        <LinearLayout
            android:id="@+id/layout_like_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_like_click"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:focusable="false"
                android:src="@drawable/item_click_nomal" />

            <TextView
                android:id="@+id/item_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:focusable="false"
                android:textColor="#6B6A6A"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_user_ask"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:focusable="false"
            android:src="@drawable/item_ask" />

        <TextView
            android:id="@+id/item_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="20dp"
            android:focusable="false"
            android:textColor="#6B6A6A"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>