<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.jiangguo.transactios.view.ActionBar
        android:id="@+id/headbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.jiangguo.transactios.view.ActionBar>

    <ImageButton
        android:id="@+id/imgbtn_add_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:background="#0000"
        android:src="@drawable/camera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="fill_parent"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:columnWidth="71dp"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="5"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" >
        </GridView>

        <EditText
            android:id="@+id/title_text"
            android:layout_width="340dp"
            android:layout_height="43dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/base_edit_input"
            android:hint="标题"
            android:minHeight="@dimen/tab_padding_left_right"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/price_text"
                android:layout_width="148dp"
                android:layout_height="42dp"
                android:background="@drawable/base_edit_input"
                android:hint="￥0.00"
                android:minHeight="@dimen/tab_padding_left_right"
                android:numeric="decimal"
                android:padding="5dp" />

            <Spinner
                android:id="@+id/tag_spinner"
                android:layout_width="187dp"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/base_edit_input" />
        </LinearLayout>

        <!-- 描述 -->

        <EditText
            android:id="@+id/context"
            android:layout_width="340dp"
            android:layout_height="92dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/base_edit_input"
            android:gravity="top"
            android:hint="大概介绍一下你的宝贝"
            android:minHeight="@dimen/tab_padding_left_right"
            android:padding="5dp" />

        <Button
            android:id="@+id/put_button"
            android:layout_width="248dp"
            android:layout_height="47dp"
            android:layout_marginTop="15dp"
            android:background="#FFD85C"
            android:text="确认发布"
            android:textColor="#38322a"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>